<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBG"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/ll_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorBG"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <!-- Hamburger/Menu icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            app:tint="?attr/colorIcon" />

        <!-- Title in center -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="Verix Chat"
            android:textColor="?attr/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Compose icon -->
        <ImageButton
            android:id="@+id/composeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_newchat"
            app:tint="?attr/colorIcon" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_conversations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_inputBox"
        android:layout_below="@id/ll_topBar"/>

    <!-- Center logo -->
    <TextView
        android:id="@+id/tvWelcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:text="Ask anything to Verix Chat"
        android:textColor="?attr/colorText"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/ll_responseSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_inputBox"
        android:orientation="vertical"
        android:background="@drawable/bg_response_selector"
        android:layout_marginStart="8dp"
        android:elevation="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:visibility="gone"
        android:clipToOutline="true">

        <!-- Friendly Option -->
        <TextView
            android:id="@+id/tvFriendly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Friendly"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:padding="10dp"
            app:tint="?attr/colorIcon"
            android:fontFamily="@font/poppins_medium"
            android:textColor="?attr/colorText"
            app:drawableStartCompat="@drawable/ic_response_type_friendly" />

        <!-- Professional Option -->
        <TextView
            android:id="@+id/tvProfessional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Professional"
            android:textSize="14sp"
            android:padding="10dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="?attr/colorText"
            app:tint="?attr/colorIcon"
            app:drawableStartCompat="@drawable/ic_response_type_professional" />

        <!-- Default Option -->
        <TextView
            android:id="@+id/tvDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_medium"
            android:padding="10dp"
            android:text="Default"
            android:textColor="?attr/colorText"
            android:textSize="14sp"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_response_type_default" />

    </LinearLayout>


    <!-- Input area -->
    <RelativeLayout
        android:id="@+id/rl_inputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/bg_inputbox_chat"
        android:paddingStart="14dp"
        android:paddingTop="10dp"
        android:paddingEnd="14dp"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/et_inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Ask anything"
            android:maxLines="5"
            android:textColor="?attr/colorText"
            android:textColorHint="?attr/colorTextHint"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:textSize="14sp" />

        <!-- Controls Row -->
        <RelativeLayout
            android:id="@+id/controlsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_inputText"
            android:layout_marginTop="8dp">

            <!-- Response Type Button (Like attach icon) -->
            <ImageButton
                android:id="@+id/btnResponseType"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_extra_response_button"
                android:contentDescription="Response Type"
                android:src="@drawable/ic_response_type_default"
                app:tint="?attr/colorIcon" />

            <!-- Deep Search -->
            <LinearLayout
                android:id="@+id/btnQuizMode"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/btnResponseType"
                android:background="@drawable/bg_extra_quiz"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_quizMode"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_quizmode"
                    app:tint="?attr/colorQuizElementsInactive" />

                <TextView
                    android:id="@+id/tv_quizMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Quiz Mode"
                    android:paddingTop="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/colorQuizElementsInactive"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Notify Mode -->
            <LinearLayout
                android:id="@+id/btnTone"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/btnQuizMode"
                android:background="@drawable/bg_extra_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tone"
                    app:tint="?attr/colorIcon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingTop="2dp"
                    android:text="Tone(D)"
                    android:textColor="?attr/colorText"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Mic Button -->
            <ImageButton
                android:id="@+id/btn_btnMic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_sendButton"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Mic"
                android:src="@drawable/ic_mic"
                app:tint="?attr/colorIcon" />

            <!-- Send Button -->
            <ImageButton
                android:id="@+id/btn_sendButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_extra_sendbutton"
                android:contentDescription="Send"
                android:src="@drawable/ic_send_button"
                app:tint="?attr/colorBG" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
