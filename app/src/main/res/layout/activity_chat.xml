<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBG"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/ll_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorBG"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <!-- Hamburger/Menu icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            app:tint="?attr/colorIcon" />

        <!-- Title in center -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="Verix Chat"
            android:textColor="?attr/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Compose icon -->
        <ImageButton
            android:id="@+id/composeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_newchat"
            app:tint="?attr/colorIcon" />
    </LinearLayout>

    <!-- Center logo -->
    <TextView
        android:id="@+id/tvWelcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:text="Ask anything to Verix Chat"
        android:textColor="?attr/colorText"
        android:textSize="24sp" />

    <!-- Bottom bar -->

    <!-- Input area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/bg_inputbox_chat"
        android:paddingStart="14dp"
        android:paddingTop="10dp"
        android:paddingEnd="14dp"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Ask anything"
            android:textColor="?attr/colorText"
            android:textColorHint="?attr/colorTextHint"
            android:paddingBottom="8dp"
            android:textSize="16sp" />

        <!-- Controls Row -->
        <RelativeLayout
            android:id="@+id/controlsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputText"
            android:layout_marginTop="8dp">

            <!-- Response Type Button (Like attach icon) -->
            <ImageButton
                android:id="@+id/btnResponseType"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_extra_response_button"
                android:contentDescription="Response Type"
                android:src="@drawable/ic_response_type"
                app:tint="?attr/colorIcon" />

            <!-- Deep Search -->
            <LinearLayout
                android:id="@+id/btnQuizMode"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/btnResponseType"
                android:background="@drawable/bg_extra_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_quizmode"
                    app:tint="?attr/colorIcon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Quiz Mode"
                    android:textColor="?attr/colorText"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Quiz Mode -->
            <LinearLayout
                android:id="@+id/btnNotify"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/btnQuizMode"
                android:background="@drawable/bg_extra_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_notify"
                    app:tint="?attr/colorIcon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Notify"
                    android:textColor="?attr/colorText"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Mic Button -->
            <ImageButton
                android:id="@+id/btnMic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@id/sendButton"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Mic"
                android:src="@drawable/ic_mic"
                app:tint="?attr/colorIcon" />

            <!-- Send Button -->
            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_extra_sendbutton"
                android:contentDescription="Send"
                android:src="@drawable/ic_mic"
                app:tint="?attr/colorIcon" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
